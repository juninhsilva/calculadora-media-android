<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextFaltas"
        android:layout_width="320dp"
        android:layout_height="52dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="52dp"
        android:text="@string/faltas"
        android:textSize="20sp"
        tools:ignore="Autofill,LabelFor,MissingConstraints,DuplicateSpeakableTextCheck"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="339dp" />

    <EditText
        android:id="@+id/editTextNota1"
        android:layout_width="320dp"
        android:layout_height="52dp"
        android:layout_marginBottom="56dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:text="Nota 1"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextNota2"
        tools:ignore="HardcodedText,MissingConstraints,DuplicateSpeakableTextCheck"
        tools:layout_editor_absoluteX="38dp" />

    <EditText
        android:id="@+id/editTextNota2"
        android:layout_width="320dp"
        android:layout_height="52dp"
        android:layout_marginBottom="72dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/nota_2"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextFaltas"
        tools:ignore="Autofill,LabelFor,MissingConstraints,DuplicateSpeakableTextCheck"
        tools:layout_editor_absoluteX="38dp" />

    <Button
        android:id="@+id/btCalcular"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginEnd="158dp"
        android:text="@string/calcular"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="454dp" />

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/resultado"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="567dp"
        tools:ignore="MissingConstraints" />
</android.support.constraint.ConstraintLayout>